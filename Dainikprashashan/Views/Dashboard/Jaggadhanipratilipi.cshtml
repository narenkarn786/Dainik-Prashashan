@model Dainikprashashan.Jaggadhani_Pratilipi

@{
    ViewBag.Title = "Jaggadhanipratilipi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link href="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/css/nepali.datepicker.v3.min.css" rel="stylesheet" type="text/css" />
<script src="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/js/nepali.datepicker.v3.min.js" type="text/javascript"></script>
<script type="text/javascript">
    window.onload = function () {
        var mainInput = document.getElementById("nepali-datepicker");
        mainInput.nepaliDatePicker();
    };
</script>

<div style="padding:30px 200px;width:100%; margin:0 auto;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-sm-5">
            <label>आवेदन गरिएको मिति </label>
            @Html.TextBoxFor(m => m.Aabedan_miti, "", new { @id = "nepali-datepicker", @name = "nepali-datepicker", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Aabedan_miti, "", new { @class = "text-danger" })
        </div>
        <hr />
        <h3>
            <b>
                आबदेकको विवरण
            </b>
        </h3>
        <hr />
        <div class="row" style="padding:0px 15px">
            <div class="col-sm-5">
                <label> नाम </label>

                @Html.EditorFor(model => model.Naam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Naam, "", new { @class = "text-danger" })
            </div>


            <div class="col-sm-5">
                <label>ना.प्र.नं.</label>

                @Html.EditorFor(model => model.Nagarikta_no, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nagarikta_no, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row" style="padding:0px 15px">
            <div class="col-sm-5">
                <label>ना.प्र. जारी मिति</label>

                @Html.EditorFor(model => model.Nagarikta_miti, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nagarikta_miti, "", new { @class = "text-danger" })
            </div>

            <div class="col-sm-5">
                <label>बुवाको नाम</label>

                @Html.EditorFor(model => model.Buwako_naam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Buwako_naam, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <label class="control-label col-md-2">ठेगाना </label>
        <div class="row" style="padding:0px 15px">

            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Aabedak_pradesh, (List<SelectListItem>)ViewBag.Pradesh, "-- प्रदेश छान्नुहोस्  --", new { @class = "form-control" })
            </div>
            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Aabedak_jilla, (List<SelectListItem>)ViewBag.Jilla, "-- जिल्ला छान्नुहोस्  --", new { @class = "form-control" })
            </div>
        </div>

        <br />
        <div class="row" style="padding:0px 15px">
            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Aabedak_gabisa, (List<SelectListItem>)ViewBag.Gabisa, "-- गा.बि.स/न.प. छान्नुहोस्  --", new { @class = "form-control" })
            </div>
            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Aabedak_ward, (List<SelectListItem>)ViewBag.Ward, "-- वडा छान्नुहोस्  --", new { @class = "form-control" })
            </div>
        </div>

        <br />
        <div class="row" style="padding:0px 15px">
            <div class="col-sm-5">
                <label>बाजेको नाम </label>

                @Html.EditorFor(model => model.Bajeko_naam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bajeko_naam, "", new { @class = "text-danger" })
            </div>

            <div class="col-sm-5">
                <label>साबिक ठेगाना </label>

                @Html.DropDownListFor(m => m.Aabedak_sabik_thegana, (List<SelectListItem>)ViewBag.Sabikthegana, "-- छान्नुहोस्  --", new { @class = "form-control" })
            </div>
        </div>
        <hr />
        <h3>
            <b>
                जग्गाको विवरण
            </b>
        </h3><hr />

        <div class="row" style="padding:0px 15px">
            <div class="col-sm-5">
                <label>जग्गा धनिको नाम</label>

                @Html.EditorFor(model => model.Jaggadhaniko_naam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Jaggadhaniko_naam, "", new { @class = "text-danger" })
            </div>

            <div class="col-sm-5">
                <label>कित्ता नं.</label>

                @Html.EditorFor(model => model.Kitta_no, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Kitta_no, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="col-lg-12">
            <label><b>क्षेत्रफल</b></label>

            <div class="form-inline">
                <div class="form-group row">
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.Bigga, new { @class = "form-control", @placeholder = "बिग्गा" })
                    </div>
                </div>
                &nbsp;
                <div class="form-group row">
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.Kattha, new { @class = "form-control", @placeholder = "कटठा" })
                    </div>
                </div>
                &nbsp;
                <div class="form-group row">
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.Dhur, new { @class = "form-control", @placeholder = "धुर" })
                    </div>
                </div>
            </div>
        </div>

        <br />
        <label class="control-label col-md-2">ठेगाना </label>
        <div class="row" style="padding:0px 15px">

            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Jagga_pradesh, (List<SelectListItem>)ViewBag.Pradesh, "-- प्रदेश छान्नुहोस्  --", new { @class = "form-control" })
            </div>
            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Jagga_jilla, (List<SelectListItem>)ViewBag.Jilla, "-- जिल्ला छान्नुहोस्  --", new { @class = "form-control" })
            </div>
        </div>

        <br />
        <div class="row" style="padding:0px 15px">
            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Jagga_gabisa, (List<SelectListItem>)ViewBag.Gabisa, "-- गा.बि.स/न.प. छान्नुहोस्  --", new { @class = "form-control" })
            </div>
            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Jagga_ward, (List<SelectListItem>)ViewBag.Ward, "-- वडा छान्नुहोस्  --", new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="col-sm-5">
            <label>साबिक ठेगाना </label>

            @Html.DropDownListFor(m => m.Aabedak_sabik_thegana, (List<SelectListItem>)ViewBag.Sabikthegana, "-- छान्नुहोस्  --", new { @class = "form-control" })
        </div>
        <br />
        <div class="form-group">
            <button class="btn btn-success" type="submit">पेश गर्नुहोस् </button>
        </div>

    }
</div>
