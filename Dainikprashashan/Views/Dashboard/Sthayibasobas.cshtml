@model Dainikprashashan.Sthayi_Basobas

@{
    ViewBag.Title = "Sthayibasobas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">
<head>
    <title>Ghar_kayamko_sifaris</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <!-- Nepali Datepicker -->
    <link href="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/css/nepali.datepicker.v3.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <script src="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/js/nepali.datepicker.v3.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        window.onload = function () {
            var mainInput = document.getElementById("nepali-datepicker");
            mainInput.nepaliDatePicker();
        };
    </script>
    <div class="col-lg-12" style="padding:15px 180px">

        <div class="content">

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)



                <div class="col-lg-5">
                    <label>
                        आवेदन गरिएको मिति:
                    </label>
                    @Html.TextBoxFor(m => m.Aabedan_miti, "", new { @id = "nepali-datepicker", @name = "nepali-datepicker", @class = "form-control" })
                </div>



                <hr />
                <h3><b>निवेदकको विवरण</b></h3>
                <hr />
                <div class="row">
                    <div class="col-sm-5">
                        <label><b>निवेदकको नाम</b></label>
                        @Html.TextBoxFor(m => m.Nibedak_naam, new { @class = "form-control" })
                    </div>

                    <div class="col-sm-5">
                        <label><b> नाम</b></label>

                        @Html.TextBoxFor(m => m.Naam, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-5">
                        <label><b> ना.प्र.प.नं.</b></label>

                        @Html.TextBoxFor(m => m.Nagarikta_no, new { @class = "form-control" })
                    </div>

                    <div class="col-lg-5">
                        <label><b> ना.प्र.प. जारी जिल्ला</b></label>
                        @Html.TextBoxFor(m => m.Nagarikta_Jilla, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-5">
                        <label><b> ना.प्र.प.नं. जारी मिति </b></label>
                        @Html.TextBoxFor(m => m.Nagarikta_miti, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-5">
                        <label><b> साबिक ठेगाना</b></label>
                        @Html.DropDownListFor(m => m.Sabik_thegana, (List<SelectListItem>)ViewBag.Sabikthegana, "-- छान्नुहोस्  --", new { @class = "form-control" })
                    </div>
                </div>
                <br />

                <label><b>स्थायी ठेगाना</b></label>
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-sm-5">
                            @Html.DropDownListFor(m => m.Pradesh, (List<SelectListItem>)ViewBag.Pradesh, "-- प्रदेश छान्नुहोस्  --", new { @class = "form-control" })
                        </div>
                        <div class="col-sm-5">
                            @Html.DropDownListFor(m => m.Jilla, (List<SelectListItem>)ViewBag.Jilla, "-- जिल्ला छान्नुहोस्  --", new { @class = "form-control" })
                        </div>
                    </div>

                    <br />
                    <div class="row">
                        <div class="col-sm-5">
                            @Html.DropDownListFor(m => m.Gabisa, (List<SelectListItem>)ViewBag.Gabisa, "-- गा.बि.स/न.प. छान्नुहोस्  --", new { @class = "form-control" })
                        </div>
                        <div class="col-sm-5">
                            @Html.DropDownListFor(m => m.Ward, (List<SelectListItem>)ViewBag.Ward, "-- वडा छान्नुहोस्  --", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">

                    <div class="col-lg-5">
                        <label><b> बसोबास सुरु गरेको मिति</b></label>
                        @Html.TextBoxFor(m => m.Basobas_miti, new { @class = "form-control" })
                    </div>

                    <div class="col-lg-5">
                        <label><b> टोल</b></label>
                        @Html.TextBoxFor(m => m.Tole, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-5">
                        <label><b>बाटोको नाम </b></label>
                        @Html.TextBoxFor(m => m.Batoko_naam, new { @class = "form-control" })
                    </div>

                    <div class="col-lg-5">
                        <label><b>घर नं.</b></label>
                        @Html.TextBoxFor(m => m.Ghar_no, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <button class="btn btn-success" type="submit">पेश गर्नुहोस् </button>


            }
        </div>
    </div>
</body>
</html>

