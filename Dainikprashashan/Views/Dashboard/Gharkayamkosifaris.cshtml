
@{
    ViewBag.Title = "Gharkayamkosifaris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Dainikprashashan.Ghar_kayamko_sifaris

<html lang="en">
<head>
    <title>Ghar_kayamko_sifaris</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <!-- Nepali Datepicker -->
    <link href="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/css/nepali.datepicker.v3.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div style="padding:30px 200px;width:100%; margin:0 auto;">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <div class="row" style="padding:0px 25px">

                <div class="col-sm-4">
                    <label>
                        आवेदन गरिएको मिति:
                    </label>

                    @Html.TextBoxFor(m => m.Aabedan_miti, "", new { @id = "nepali-datepicker", @name = "nepali-datepicker", @class = "form-control" })
                </div>

                <div class="col-sm-4">
                    <label>कार्यलय</label>
                    @Html.DropDownListFor(m => m.karyalaya,(List<SelectListItem>)ViewBag.Karyalaya, "-- छान्नुहोस्  --", new { @class = "form-control" })

                </div>
            </div>


            <hr />
            <h3><b>घर कायम सिफारिस विवरण</b></h3>
            <hr>

            <div class="col-sm-5">
                <label><b>आवेदकको नाम</b></label>
                @Html.TextBoxFor(m => m.Aabedak_name, new { @class = "form-control" })
            </div>
            <br />
            <div class="col-lg-12">
                <label><b>जग्गाको ठेगाना </b></label>
                <br />
                <div class="row">
                    <div class="col-sm-5">
                        @Html.DropDownListFor(m => m.Pradesh, (List<SelectListItem>)ViewBag.Pradesh, "-- प्रदेश छान्नुहोस्  --", new { @class = "form-control" })
                    </div>
                    <div class="col-sm-5">
                        @Html.DropDownListFor(m => m.Jilla, (List<SelectListItem>)ViewBag.Jilla, "-- जिल्ला छान्नुहोस्  --", new { @class = "form-control" })
                    </div>
                </div>

                <br />
                <div class="row">
                    <div class="col-sm-5">
                        @Html.DropDownListFor(m => m.Gabisa, (List<SelectListItem>)ViewBag.Gabisa, "-- गा.बि.स/न.प. छान्नुहोस्  --", new { @class = "form-control" })
                    </div>
                    <div class="col-sm-5">
                        @Html.DropDownListFor(m => m.Ward, (List<SelectListItem>)ViewBag.Ward, "-- वडा छान्नुहोस्  --",new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <br />
            <div class="row" style="padding:0px 15px">
                <div class="col-sm-5">
                    <label><b>जग्गाको साबिक ठेगाना </b></label>
                    @Html.TextBoxFor(m => m.Gajjako_sabikthegana, new { @class = "form-control" })
                </div>
                <br />
                <div class="col-sm-5">
                    <label><b>नक्सा सिट नं</b></label>
                    @Html.TextBoxFor(m => m.Naksa_sheetno, new { @class = "form-control" })
                </div>
            </div>


            <br />
            <div class="col-lg-12">
                <label><b>क्षेत्रफल</b></label>

                <div class="form-inline">
                    <div class="form-group row">
                        <div class="col-lg-3">
                            @Html.TextBoxFor(m => m.Bigga, new { @class = "form-control", @placeholder = "बिग्गा" })
                        </div>
                    </div>
                    &nbsp;
                    <div class="form-group row">
                        <div class="col-lg-3">
                            @Html.TextBoxFor(m => m.Kattha, new { @class = "form-control", @placeholder = "कटठा" })
                        </div>
                    </div>
                    &nbsp;
                    <div class="form-group row">
                        <div class="col-lg-3">
                            @Html.TextBoxFor(m => m.Dhur, new { @class = "form-control", @placeholder = "धुर" })
                        </div>
                    </div>
                </div>
            </div>

            <br />
            <div class="row" style="padding:0px 15px">
                <div class="col-sm-5">
                    <label><b>कित्ता नं</b></label>
                    @Html.TextBoxFor(m => m.Kitta_no, new { @class = "form-control" })
                </div>

                <div class="col-sm-5">
                    <label><b>घर नं</b></label>
                    @Html.TextBoxFor(m => m.Ghar_no, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row" style="padding:0px 15px">
                <div class="col-sm-5">
                    <label><b>घरको प्रकार </b></label>
                    @Html.DropDownListFor(m => m.Gharko_prakaar, (List<SelectListItem>)ViewBag.Gharkoprakaar, "-- छान्नुहोस्  --", new { @class = "form-control" })
                </div>
                <br />
                <div class="col-sm-5">
                    <label><b>घर निर्माण भएको/अनुमति लिएको साल</b></label>
                    @Html.TextBoxFor(m => m.Gharnirmaan_saal, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-success">पेश गर्नुहोस् </button>
        }
    </div>
    <script src="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/js/nepali.datepicker.v3.min.js" type="text/javascript"></script>
    <script type="text/javascript">
                    window.onload = function () {
                        var mainInput = document.getElementById("nepali-datepicker");
                        mainInput.nepaliDatePicker();
                    };
    </script>
</body>
</html>


