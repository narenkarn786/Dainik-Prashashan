@model Dainikprashashan.Bato_Kayam

@{
    ViewBag.Title = "Batokayam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/css/nepali.datepicker.v3.min.css" rel="stylesheet" type="text/css" />
<script src="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/js/nepali.datepicker.v3.min.js" type="text/javascript"></script>
<script type="text/javascript">
    window.onload = function () {
        var mainInput = document.getElementById("nepali-datepicker");
        mainInput.nepaliDatePicker();
    };
</script>

<div style="padding:30px 200px;width:100%; margin:0 auto;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-sm-5">
            <label>आवेदन गरिएको मिति </label>
            @Html.TextBoxFor(m => m.Aabedan_miti, "", new { @id = "nepali-datepicker", @name = "nepali-datepicker", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Aabedan_miti, "", new { @class = "text-danger" })
        </div>
        <hr />
        <h3><b>जग्गाको विवरण</b></h3><hr />
        <div class="row" style="padding:0px 15px">
            <div class="col-sm-5">
                <label><b>जग्गाधनीको नाम</b></label>

                @Html.EditorFor(model => model.Jagga_Dhaniko_Naam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Jagga_Dhaniko_Naam, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-5">
                <label><b>कित्ता नं.</b></label>

                @Html.EditorFor(model => model.Kitta_no, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Kitta_no, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="col-lg-12">
            <label><b>क्षेत्रफल</b></label>

            <div class="form-inline">
                <div class="form-group row">
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.Bigga, new { @class = "form-control", @placeholder = "बिग्गा" })
                    </div>
                </div>
                &nbsp;
                <div class="form-group row">
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.Kattha, new { @class = "form-control", @placeholder = "कटठा" })
                    </div>
                </div>
                &nbsp;
                <div class="form-group row">
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.Dhur, new { @class = "form-control", @placeholder = "धुर" })
                    </div>
                </div>
            </div>
        </div>
        <br />
        <label class="control-label col-md-2">ठेगाना </label>
        <div class="row">
            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Pradesh, (List<SelectListItem>)ViewBag.Pradesh, "-- प्रदेश छान्नुहोस्  --", new { @class = "form-control" })
            </div>
            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Jilla, (List<SelectListItem>)ViewBag.Jilla, "-- जिल्ला छान्नुहोस्  --", new { @class = "form-control" })
            </div>
        </div>

        <br />
        <div class="row">
            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Gabisa, (List<SelectListItem>)ViewBag.Gabisa, "-- गा.बि.स/न.प. छान्नुहोस्  --", new { @class = "form-control" })
            </div>
            <div class="col-sm-5">
                @Html.DropDownListFor(m => m.Ward, (List<SelectListItem>)ViewBag.Ward, "-- वडा छान्नुहोस्  --", new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row" style="padding:0px 15px">
            <div class="col-sm-5">
                <label><b>साबिक ठेगाना</b></label>

                @Html.DropDownListFor(m => m.sabik_thegana, (List<SelectListItem>)ViewBag.Sabikthegana, "-- छान्नुहोस्  --", new { @class = "form-control" })
            </div>

            <div class="col-sm-5">
                <label><b>बाटो खोल्न चाहेको दिशा </b></label>

                @Html.EditorFor(model => model.Bato_Disa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bato_Disa, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row" style="padding:0px 15px">
            <div class="col-sm-5">
                <label><b>सडक लम्बाई </b></label>

                @Html.EditorFor(model => model.Sadak_Lambai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sadak_Lambai, "", new { @class = "text-danger" })
            </div>


            <div class="col-sm-5">
                <label><b>सडक चौडाई  </b></label>

                @Html.EditorFor(model => model.Sadak_Chaudai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Sadak_Chaudai, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <button class="btn btn-success" type="submit">पेश गर्नुहोस् </button>
        </div>

    }
</div>
