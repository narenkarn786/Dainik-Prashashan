@model Dainikprashashan.Byawasaya_Banda_Barey

@{
    ViewBag.Title = "Byawasayabanda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">
<head>
    <title>Ghar_kayamko_sifaris</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <!-- Nepali Datepicker -->
    <link href="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/css/nepali.datepicker.v3.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <script src="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/js/nepali.datepicker.v3.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        window.onload = function () {
            var mainInput = document.getElementById("nepali-datepicker");
            mainInput.nepaliDatePicker();
        };
    </script>
    <div class="col-lg-12" style="padding:5px 180px">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="col-lg-5">
                <label>
                    आवेदन गरिएको मिति:
                </label>
                @Html.TextBoxFor(m => m.Aabedan_miti, "", new { @id = "nepali-datepicker", @name = "nepali-datepicker", @class = "form-control" })
            </div>
            <hr />
            <h3><b>व्यवसाय / फार्मको विवरण</b></h3>
            <hr />
            <div class="row" style="padding:0px 15px">
                <div class="col-lg-5">
                    <label>
                        व्यवसायको नाम
                    </label>
                    @Html.TextBoxFor(m => m.Byawasaya_naam, "", new { @class = "form-control" })
                </div>
                <div class="col-lg-5">
                    <label>
                        व्यवसायीको नाम
                    </label>
                    @Html.TextBoxFor(m => m.Byawasayi_naam, "", new { @class = "form-control" })
                </div>
            </div>
            <br />

            <div class="col-lg-5">
                <label>
                    दर्ता नं.
                </label>
                @Html.TextBoxFor(m => m.Darta_no, "", new { @class = "form-control" })
            </div>

            <br />
            <div class="row" style="padding:0px 15px">
                <div class="col-lg-5">
                    <label>
                        व्यवसायीको प्रकार
                    </label>
                    @Html.TextBoxFor(m => m.Prakaar, "", new { @class = "form-control" })
                </div>
                <div class="col-lg-5">
                    <label>
                        व्यवसायीको प्रकृति
                    </label>
                    @Html.TextBoxFor(m => m.Prakriti, "", new { @class = "form-control" })
                </div>
            </div>
            <br />
            <label class="control-label col-md-2">ठेगाना </label>
            <div class="row">
                <div class="col-sm-5">
                    @Html.DropDownListFor(m => m.Pradesh, (List<SelectListItem>)ViewBag.Pradesh, "-- प्रदेश छान्नुहोस्  --", new { @class = "form-control" })
                </div>
                <div class="col-sm-5">
                    @Html.DropDownListFor(m => m.Jilla, (List<SelectListItem>)ViewBag.Jilla, "-- जिल्ला छान्नुहोस्  --", new { @class = "form-control" })
                </div>
            </div>

            <br />
            <div class="row">
                <div class="col-sm-5">
                    @Html.DropDownListFor(m => m.Gabisa, (List<SelectListItem>)ViewBag.Gabisa, "-- गा.बि.स/न.प. छान्नुहोस्  --", new { @class = "form-control" })
                </div>
                <div class="col-sm-5">
                    @Html.DropDownListFor(m => m.Ward, (List<SelectListItem>)ViewBag.Ward, "-- वडा छान्नुहोस्  --", new { @class = "form-control" })
                </div>
            </div>
            <br />

            <div class="row" style="padding:0px 15px">
                <div class="col-lg-5">
                    <label>
                        साबिक ठेगाना
                    </label>
                    @Html.DropDownListFor(m => m.Sabik_thegana, (List<SelectListItem>)ViewBag.Sabikthegana, "-- छान्नुहोस्  --", new { @class = "form-control" })
                </div>
                <div class="col-lg-5">
                    <label>
                        हालको ठेगाना
                    </label>
                    @Html.TextBoxFor(m => m.Haal_thegana, "", new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row" style="padding:0px 15px">
                <div class="col-lg-5">
                    <label>
                        टोलको नाम
                    </label>
                    @Html.TextBoxFor(m => m.Toleko_naam, "", new { @class = "form-control" })
                </div>
                <div class="col-lg-5">
                    <label>
                        बाटोको नाम
                    </label>
                    @Html.TextBoxFor(m => m.Batoko_naam, "", new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="col-lg-5">
                <label>
                    घर नं
                </label>
                @Html.TextBoxFor(m => m.Gharno, "", new { @class = "form-control" })
            </div>
            <br />
            <div class="row" style="padding:0px 15px">
                <div class="col-lg-5">
                    <label>
                        व्यवसाय बन्द गरिएको मिति
                    </label>
                    @Html.TextBoxFor(m => m.Byawasaya_Bandamiti, "", new { @class = "form-control" })
                </div>
                <div class="col-lg-5">
                    <label>
                        सर्जमिन गरेको मिति
                    </label>
                    @Html.TextBoxFor(m => m.Sarjamin_miti, "", new { @class = "form-control" })
                </div>
            </div>
            <hr />
            @Html.TextBoxFor(m => m.ImagePath, "", new { type = "file" })
            @Html.ValidationMessageFor(m => m.ImagePath, "", new { @class = "error" })
            <div class="form-group" style="padding:10px 0px">
                <button type="submit" class="btn btn-success">पेश गर्नुहोस् </button>
            </div>
        }
    </div>
</body>
</html>
