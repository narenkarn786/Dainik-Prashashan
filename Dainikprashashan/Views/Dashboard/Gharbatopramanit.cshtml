@model Dainikprashashan.Ghar_Bato_Pramanit

@{
    ViewBag.Title = "Gharbatopramanit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">
<head>
    <title>Ghar_kayamko_sifaris</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <!-- Nepali Datepicker -->
    <link href="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/css/nepali.datepicker.v3.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div style="padding:5px 180px; width:100%">

        @*<div class="content">*@

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <div class="form-inline">
                <div class="form-group row">

                    <label style="color:black;font-family:Arial">
                        आवेदन गरिएको मिति:
                    </label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.Aabedan_miti, "", new { @id = "nepali-datepicker", @name = "nepali-datepicker", @class = "form-control" })

                    </div>
                    <script src="http://nepalidatepicker.sajanmaharjan.com.np/nepali.datepicker/js/nepali.datepicker.v3.min.js" type="text/javascript"></script>
                    <script type="text/javascript">
                        window.onload = function () {
                            var mainInput = document.getElementById("nepali-datepicker");
                            mainInput.nepaliDatePicker();
                        };
                    </script>
                </div>


                <div class="custom-control form-group row">
                    <label style="color:black">कार्यलय</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.karyalaya, "", new { @class = "form-control" })
                    </div>
                </div>

                <div class="custom-control form-group row">
                    <label style="color:black">जग्गा धनीको नाम </label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.Jagga_Dhaniko_Naam, "", new { @class = "form-control" })
                    </div>
                </div>

                <div class=" form-group row">
                    <label style="color:black">ठेगाना</label>
                    <div class="col-lg-4">
                        @Html.TextBoxFor(m => m.Pradesh, "", new { @class = "form-control" })
                        @Html.TextBoxFor(m => m.Jilla, "", new { @class = "form-control" })
                        @Html.TextBoxFor(m => m.Gabisa, "", new { @class = "form-control" })
                        @Html.TextBoxFor(m => m.Ward, "", new { @class = "form-control" })
                    </div>
                </div>
                <br>
                <div class="table-responsive-sm">


                    <table class="table table-bordered">

                        <colgroup span="3"></colgroup>


                        <tr>
                            <th rowspan="2">साबिक गा.बि.स/न.पा</th>
                            <th rowspan="2">हाल गा.बि.स/न.पा</th>
                            <th colspan="3" scope="colgroup">जग्गाको विवरण</th>
                            <th rowspan="2">घर</th>
                            <th rowspan="2">घरको प्रकार</th>
                            <th rowspan="2">अनुमानित मुल्य	</th>
                            <th rowspan="2">बाटो</th>
                            <th rowspan="2">बाटोको प्रकार</th>
                            <th rowspan="2">कैफियत</th>

                        </tr>
                        <tr>
                            <th scope="col">नक्सा सि.नं</th>
                            <th scope="col">कि.नं</th>
                            <th scope="col">क्षेत्रफल</th>

                        </tr>

                        <tr>
                            <th> @Html.TextBoxFor(m => m.sabik_Gabisa, "", new { @class = "form-control" })</th>
                            <th> @Html.TextBoxFor(m => m.Haal_Gabisa, "", new { @class = "form-control" })</th>
                            <th> @Html.TextBoxFor(m => m.Naksa_sheetno, "", new { @class = "form-control" })</th>
                            <th> @Html.TextBoxFor(m => m.Kitta_no, "", new { @class = "form-control" })</th>
                            <th>
                                @Html.TextBoxFor(m => m.Bigga, "", new { @class = "form-control", @placeholder = "Bigga" })
                                @Html.TextBoxFor(m => m.Kattha, "", new { @class = "form-control", @placeholder = "Kattha" })
                                @Html.TextBoxFor(m => m.Dhur, "", new { @class = "form-control", @placeholder = "Dhur" })
                            </th>
                            <th><input type="checkbox" id="myCheck" onclick="myFunction()"></th>
                            <th> @Html.TextBoxFor(m => m.Gharko_prakaar, "", new { @class = "form-control", @id = "text", @style = "display:none" })</th>
                            <th> @Html.TextBoxFor(m => m.Anumanit_Mulya, "", new { @class = "form-control", @id = "textbox", @style = "display:none" })</th>

                            <th><input type="checkbox" id="Check" onclick="mFunction()"></th>
                            <th> @Html.TextBoxFor(m => m.Batoko_Prakar, "", new { @class = "form-control", @id = "txt", @style = "display:none" })</th>

                            <th> @Html.TextBoxFor(m => m.Kaifiyat, "", new { @class = "form-control" })</th>
                        </tr>


                    </table>
                    <script>
                        function myFunction() {
                            var checkBox = document.getElementById("myCheck");
                            var text = document.getElementById("text");
                            var tt = document.getElementById("textbox");
                            if (checkBox.checked == true) {
                                text.style.display = "block";
                                tt.style.display = "block";
                            } else {
                                text.style.display = "none";
                                tt.style.display = "none";
                            }
                        }

                        function mFunction() {
                            var checkBox = document.getElementById("Check");
                            var text = document.getElementById("txt");

                            if (checkBox.checked == true) {
                                text.style.display = "block";

                            } else {
                                text.style.display = "none";

                            }
                        }

                    </script>

                    @Html.TextBoxFor(m => m.Files, "", new { type = "file" })
                    @Html.ValidationMessageFor(m => m.Files, "", new { @class = "error" })
                    <br />
                    <button type="submit" class="btn btn-success">पेश गर्नुहोस् </button>
                </div>


            </div>
        }
    </div>
    
</body>
</html>

